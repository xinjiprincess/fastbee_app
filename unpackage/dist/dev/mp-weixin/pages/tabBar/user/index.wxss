page {
  background: #eef3f7;
}
.user-wrap {
  padding-bottom: 200rpx;
  background: #eef3f7;
}
.user-wrap .account-wrap {
  display: flex;
  flex-direction: row;
  background-color: #007AFF;
  align-items: center;
  justify-content: space-between;
}
.user-wrap .account-wrap .left-wrap {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20px;
}
.user-wrap .account-wrap .left-wrap .title-wrap {
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}
.user-wrap .account-wrap .left-wrap .title-wrap .name-wrap {
  flex: 1;
  display: flex;
  flex-direction: row;
  margin-bottom: 15rpx;
}
.user-wrap .account-wrap .right-wrap {
  padding: 40rpx;
}
.user-wrap .grid-wrap {
  background-color: #ffffff;
  padding: 40rpx;
}
.user-wrap .vip-wrap {
  margin: 20rpx 0;
}
.user-wrap .vip-wrap .vip {
  display: flex;
  flex-direction: row;
  padding: 20rpx 40rpx;
  align-items: center;
  background-color: #ffffff;
}
.user-wrap .vip-wrap .vip .left {
  flex: 1;
}
.user-wrap .group-wrap {
  background-color: #ffffff;
  margin-top: 20rpx;
}
.user-wrap .other-wrap .popup-title {
  margin: 20px 20px;
}
.user-wrap .other-wrap .btnclass {
  margin: 0px 20px 20px 20px;
  border-radius: 10px;
}

