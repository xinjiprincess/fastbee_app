page {
  background: #007aff;
  height: 100%;
}
.bind-login-wrap {
  height: 100%;
}
.bind-login-wrap .top-wrap {
  padding-top: 92rpx;
  height: 420rpx;
}
.bind-login-wrap .main-wrap {
  position: fixed;
  padding: 40rpx;
  background: #ffffff;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  top: 420rpx;
  left: 0;
  right: 0;
  bottom: 0;
}
.bind-login-wrap .main-wrap .register-wrap {
  margin-top: 30rpx;
  display: flex;
  flex-direction: initial;
  justify-content: flex-end;
}
.bind-login-wrap .main-wrap .register-wrap .now-btn {
  margin-left: 20rpx;
}
.bind-login-wrap .main-wrap .footer-wrap {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  color: #909399;
  text-align: center;
}
.bind-login-wrap .main-wrap .footer-wrap .other-login-wrap {
  margin-bottom: 60rpx;
}
.bind-login-wrap .main-wrap .footer-wrap .copyright {
  font-size: 16rpx;
  margin-top: 20rpx;
}
.bind-login-wrap .main-wrap .footer-wrap .clause {
  font-size: 28rpx;
}
.bind-login-wrap .main-wrap .footer-wrap .clause .check_text {
  display: inline-block;
  vertical-align: middle;
}
.bind-login-wrap .main-wrap .footer-wrap .clause .service,
.bind-login-wrap .main-wrap .footer-wrap .clause .privacy {
  color: #3c9cff;
}

